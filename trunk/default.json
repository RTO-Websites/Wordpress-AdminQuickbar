{
  "Targets": {
    "Dev": {
      "Slug": "dev",
      "Path": ""
    },
    "Build": {
      "Slug": "build",
      "Path": "build"
    },
    "Ci": {
      "Slug": "ci-build",
      "Path": "CiBuild"
    }
  },
  "Types": {
    "Styles": {
      "Sources": [
        {
          "Name": "SCSS",
          "Src": "SCSS/**/*.scss",
          "Exclude": []
        },
        {
          "Name": "CSS",
          "Src": "CSS/**/*.css",
          "Exclude": [
            "*.min.css"
          ]
        }
      ],
      "Destination": "CSS"
    },
    "Scripts": {
      "Sources": [
        {
          "Name": "JS",
          "Src": "JS/**/*.js",
          "Exclude": [
            "*.min.js"
          ]
        },
        {
          "Name": "CoffeeScript",
          "Src": "Coffee/**/*.coffee",
          "Exclude": []
        },
        {
          "Name": "TypeScript",
          "Src": "Ts/**/*.ts",
          "Exclude": []
        }
      ],
      "Destination": "js"
    },
    "Static": [
      {
        "Name": "Assets",
        "Src": [
          "Assets"
        ],
        "Dest": "Assets",
        "Exclude": [
          "Public",
          "Admin",
          "node_modules"
        ]
      },
      {
        "Name": "Vendor",
        "Src": "Vendor",
        "Dest": "Vendor",
        "Exclude": [
          "Public",
          "admin",
          "node_modules"
        ]
      },
      {
        "Name": "Folder lvl Files",
        "Src": "*.*",
        "Dest": "",
        "Exclude": [
          "Public",
          "admin",
          "node_modules"
        ]
      }
    ]
  },
  "Folders": [
    {
      "Name": "Admin",
      "Src": "Admin",
      "Dest": "Admin",
      "Types": [
        "Scripts",
        "Styles",
        "Static"
      ],
      "Exclude": []
    },
    {
      "Name": "Public",
      "Src": "Public",
      "Dest": "Public",
      "Types": [
        "Scripts",
        "Styles",
        "Static"
      ],
      "Exclude": []
    },
    {
      "Name": "Root",
      "Src": "",
      "Dest": "",
      "Types": [
        "Static"
      ],
      "Exclude": [
        "Public",
        "Admin",
        "node_modules"
      ]
    }
  ]
}